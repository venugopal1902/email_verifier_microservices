# --- Stage 1: Build ---
FROM node:22-alpine as build

WORKDIR /app
COPY package*.json ./
RUN npm install

COPY . .
# Build the project (creates /app/dist)
RUN npm run build

# --- Stage 2: Serve ---
FROM nginx:alpine

# Copy the build output to Nginx's html directory
COPY --from=build /app/dist /usr/share/nginx/html

# Copy a simple Nginx config for the SPA (Single Page App)
COPY nginx-ui.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]